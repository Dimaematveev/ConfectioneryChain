<Window x:Class="ConfectioneryChain.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConfectioneryChain.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="0" >
            <TextBlock>Кафе</TextBlock>
            <Label x:Name="LableConf">0</Label>
            <Button x:Name="EditConf" Height="20" Click="EditConf_Click" >Изменить</Button>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="0" >
            <TextBlock>Сотрудники</TextBlock>
            <Label x:Name="LableEmpl">0</Label>
            <Button x:Name="EditEmpl" Height="20" Click="EditEmpl_Click"  >Изменить</Button>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="2" Grid.Row="0" >
            <TextBlock>Должности</TextBlock>
            <Label x:Name="LablePos">0</Label>
            <Button x:Name="EditPos" Height="20" Click="EditPos_Click">Изменить</Button>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="3" Grid.Row="0" >
            <TextBlock>Типы продуктов</TextBlock>
            <Label x:Name="LableTypeGoods">0</Label>
            <Button x:Name="EditTypeGoods" Height="20" Click="EditTypeGoods_Click">Изменить</Button>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="4" Grid.Row="0" >
            <TextBlock >Типы подсчета товара</TextBlock>
            <Label x:Name="LableTypeUnits">0</Label>
            <Button x:Name="EditTypeUnits" Height="20" Click="EditTypeUnits_Click">Изменить</Button>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="1" >
            <TextBlock>Продукты</TextBlock>
            <Label x:Name="LableGoods">0</Label>
            <Button x:Name="EditGoods" Height="20" Click="EditGoods_Click">Изменить</Button>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1" >
            <TextBlock TextWrapping="Wrap">Распределение сотрудников</TextBlock>
            <Label x:Name="LableDistributionOfEmployees">0</Label>
            <Button x:Name="EditDistributionOfEmployees" Height="20" Click="EditDistributionOfEmployees_Click">Изменить</Button>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="2" >
            <TextBlock TextWrapping="Wrap">Рецепты</TextBlock>
            <Label x:Name="LableRecipes">0</Label>
            <Button x:Name="EditRecipes" Height="20" Click="EditRecipes_Click">Изменить</Button>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="2" >
            <TextBlock TextWrapping="Wrap">Иерархия в рецепте</TextBlock>
            <Label x:Name="LableHierararchyInRecipe">0</Label>
            <Button x:Name="EditHierararchyInRecipe" Height="20" Click="EditHierararchyInRecipe_Click" >Изменить</Button>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="2" Grid.Row="2" >
            <TextBlock TextWrapping="Wrap">Продукты в рецепте</TextBlock>
            <Label x:Name="LableItemInRecipes">0</Label>
            <Button x:Name="EditItemInRecipes" Height="20" Click="EditItemInRecipe_Click" >Изменить</Button>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="3" Grid.Row="2" >
            <TextBlock TextWrapping="Wrap">Топпинги в рецепте</TextBlock>
            <Label x:Name="LableToppingInRecipes">0</Label>
            <Button x:Name="EditToppingInRecipes" Height="20" Click="EditToppingInRecipes_Click" >Изменить</Button>
        </StackPanel>


        <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="3" >
            <TextBlock TextWrapping="Wrap">Изменить рецепты(хороший)</TextBlock>
            <Button x:Name="EditRealRecipes" Height="20" Click="EditRealRecipes_Click">Изменить</Button>
        </StackPanel>
    </Grid>
</Window>
